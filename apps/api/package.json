{
  "name": "@pake/api",
  "version": "1.0.0",
  "description": "A RESTful API for task management built with Node.js, Express, PostgreSQL, and Redis.",
  "main": "src/index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:security": "mocha ../tests/security/*.js --timeout 30000",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "security:audit": "npm audit",
    "security:check": "npm run security:audit && npm run test:security",
    "ci:test": "npm run lint && npm run test:coverage && npm run test:integration && npm run test:security",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "redis": "^5.8.2",
    "winston": "^3.17.0",
    "@pake/common": "workspace:*",
    "@pake/types": "workspace:*",
    "@pake/config": "workspace:*",
    "@pake/database": "workspace:*"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "axios": "^1.6.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@jest/globals": "^30.0.5",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  },
  "private": true
}